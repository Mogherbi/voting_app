= form_for :session, url: session_path, :html => {:class => 'user-form'} do |form|
  = form.text_field :email, type: 'email', placeholder: 'Email', class: "text-field"
  = form.password_field :password, placeholder: 'Password', class: "text-field"
  = form.submit 'I work at NEXT!', class: "fbtn fbtn-primary fbtn-block fbtn-large"